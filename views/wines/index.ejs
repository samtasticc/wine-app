<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <title>My Sips</title>
</head>
<body>
    <div class="flex-container">
        <div>
            <h1>Welcome to Sip Happens, <%= user.username %>!</h1>
        </div>
        <div class="navbar">
            <%- include('../partials/navbar.ejs') %> 
        </div>
        <div>
            <h3>My Sips:</h3>
        </div>
        <div class="mysips">
            <ul>
                <% wines.forEach((wines)=>{ %>
                    <a href="/users/<%= user._id %>/wines/<%= wines._id %>">
                    <li><%= wines.brand %> - <%= wines.varietal %></li>
                <% }) %>    
                    </a>
            </ul>
        </div>
    </div>
</body>
</html>